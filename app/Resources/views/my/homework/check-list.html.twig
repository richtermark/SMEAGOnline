{% extends 'my/layout.html.twig' %}

{% block title %}{{ '作业批阅'|trans }} - {{ parent() }}{% endblock %}
{% set side_nav = 'my-homework-check' %}

{% block main %}
  <div class="panel panel-default panel-col">
    <div class="panel-heading">{{'作业批阅'|trans}}</div>
    <div class="panel-body">
      <ul class="nav nav-pills mb15">
        <li {% if status == 'reviewing' %} class="active"{% endif %}>
          <a href="{{ url('my_homework_check_list', {status:'reviewing'}) }}">未批阅</a>
        </li>
        <li {% if status == 'finished' %} class="active"{% endif %}>
          <a href="{{ url('my_homework_check_list', {status:'finished'}) }}">已批阅</a>
        </li>
      </ul>
      {% include 'my/homework/check-table.html.twig' %}
    </div>
  </div>
{% endblock %}