{% extends 'my/layout.html.twig' %}

{% block title %}{{'试卷批阅'|trans}} - {{ parent() }}{% endblock %}
{% set side_nav = 'my-testpaper-check' %}

{% block main %}
<div class="panel panel-default panel-col">

  <div class="panel-heading">
    {{'试卷批阅'|trans}}
  </div>
  <div class="panel-body">
    <ul class="nav nav-pills">
      <li class="{% if status == 'reviewing' %}active{% endif %}"><a href="{{ path('my_testpaper_check_list',{status:'reviewing'}) }}">{{'未批阅'|trans}}</a></li>
      <li class="{% if status == 'finished' %}active{% endif %}"><a href="{{ path('my_testpaper_check_list',{status:'finished'}) }}">{{'已批阅'|trans}}</a></li>
    </ul>
    <br>
    {% include 'my/testpaper/check-table.html.twig' %}
  </div>
</div>
{% endblock %}