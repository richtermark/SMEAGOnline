<table id="user-table" class="table table-striped table-hover" data-search-form="#user-search-form" style="word-break:break-all;">
  <thead>
  <tr>
    <th>{{ '学习任务'|trans }}</th>
    <th>{{ '任务类型'|trans }}</th>
    <th>{{ '创建者'|trans }}</th>
  </tr>
  </thead>
  <tbody>
  {% if taskDetail %}
    {% for data in taskDetail %}
      <tr>
        <td style="width:50%"><strong>{{ data.title }}</strong><br><span
            class="text-muted text-sm">{{ '属于课程:'|trans }}{{ courseSets[courses[data.courseId].courseSetId].title }} &raquo; {{ courses[data.courseId].title }}</span>
        </td>
        <td>{% if data.type=="text" %}{{ '图文'|trans }}
          {% elseif data.type=="video" %}{{ '视频'|trans }}
          {% elseif data.type=="audio" %}{{ '音频'|trans }}
          {% elseif data.type=="ppt" %}PPT
          {% elseif data.type=="testpaper" %}{{ '试卷'|trans }}
          {% elseif data.type=="live" %}{{ '直播'|trans }}
          {% elseif data.type=="flash" %}Flash
          {% elseif data.type=="doc" %}{{ '文档'|trans }}
          {% endif %}</td>
        <td>{{ admin_macro.user_link(users[courses[data.courseId].creator]) }}<br>{{ data.createdTime|date("Y-m-d H:i:s") }}</td>
      </tr>
    {% endfor %}
  {% endif %}
  </tbody>
</table>
{{ admin_macro.paginator(paginator) }}