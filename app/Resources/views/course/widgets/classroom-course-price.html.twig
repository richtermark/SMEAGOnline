{% if setting('coin.coin_enabled') and setting('coin.price_type') == 'Coin' %}
  {% if price > 0 %}
     {{'价格：'|trans}} {{ price * setting('coin.cash_rate')}}{{setting('coin.coin_name')}}
  {% else %}
    {{'免费'|trans}}
  {% endif %}
{% else %}
  {% if price > 0 %}
     {{'价格 : %price%元'|trans({'%price%': price })}}
  {% else %}
    {{'免费'|trans}}
  {% endif %}
{% endif %}